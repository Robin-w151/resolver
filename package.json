{
  "name": "@robinw151/resolver",
  "version": "0.3.1",
  "description": "A dependency-aware task resolver using RxJS observables for asynchronous execution",
  "author": "Robin Wunderbaldinger",
  "license": "MIT",
  "homepage": "https://github.com/Robin-w151/resolver",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Robin-w151/resolver.git"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*.{js,cjs}",
    "dist/**/*.d.{ts,cts}",
    "dist/**/*.map",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "rxjs",
    "dependency",
    "resolver",
    "async",
    "observable",
    "typescript",
    "task",
    "execution"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "format": "prettier --check **/*.ts",
    "lint": "eslint --no-warn-ignored **/*.ts",
    "test": "vitest run && tsc --noEmit --project tests/tsconfig.json",
    "test:watch": "vitest watch",
    "benchmark": "vitest bench --run",
    "benchmark:watch": "vitest bench --watch",
    "check": "pnpm format && pnpm lint && pnpm test",
    "prepack": "pnpm build && clean-package",
    "postpack": "clean-package restore",
    "prepare": "husky"
  },
  "peerDependencies": {
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.8",
    "@commitlint/cli": "20.4.2",
    "@commitlint/config-conventional": "20.4.2",
    "@eslint/js": "10.0.1",
    "@types/node": "24.10.13",
    "@vitest/coverage-v8": "4.0.18",
    "clean-package": "2.2.0",
    "eslint": "10.0.1",
    "eslint-config-prettier": "10.1.8",
    "husky": "9.1.7",
    "prettier": "3.8.1",
    "tsup": "8.5.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.56.0",
    "vitest": "4.0.18"
  },
  "pnpm": {
    "overrides": {
      "glob": "^11.1.0"
    }
  },
  "packageManager": "pnpm@10.28.2+sha512.41872f037ad22f7348e3b1debbaf7e867cfd448f2726d9cf74c08f19507c31d2c8e7a11525b983febc2df640b5438dee6023ebb1f84ed43cc2d654d2bc326264",
  "clean-package": {
    "remove": [
      "clean-package",
      "devDependencies",
      "packageManager",
      "scripts"
    ]
  }
}
