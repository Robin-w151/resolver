{
  "name": "@robinw151/resolver",
  "version": "0.3.1",
  "description": "A dependency-aware task resolver using RxJS observables for asynchronous execution",
  "author": "Robin Wunderbaldinger",
  "license": "MIT",
  "homepage": "https://github.com/Robin-w151/resolver",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Robin-w151/resolver.git"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*.{js,cjs}",
    "dist/**/*.d.{ts,cts}",
    "dist/**/*.map",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "rxjs",
    "dependency",
    "resolver",
    "async",
    "observable",
    "typescript",
    "task",
    "execution"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "lint": "prettier --check **/*.ts && eslint --no-warn-ignored **/*.ts",
    "test": "vitest run && tsc --noEmit --project tests/tsconfig.json",
    "test:watch": "vitest watch",
    "benchmark": "vitest bench --run",
    "benchmark:watch": "vitest bench --watch",
    "check": "pnpm lint && pnpm test",
    "prepack": "pnpm build && clean-package",
    "postpack": "clean-package restore",
    "prepare": "husky"
  },
  "peerDependencies": {
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.8",
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@eslint/js": "9.39.1",
    "@types/node": "24.10.1",
    "@vitest/coverage-v8": "3.2.4",
    "clean-package": "2.2.0",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "husky": "9.1.7",
    "prettier": "3.7.3",
    "tsup": "8.5.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.48.0",
    "vitest": "3.2.4"
  },
  "pnpm": {
    "overrides": {
      "glob": "^11.1.0"
    }
  },
  "packageManager": "pnpm@10.22.0+sha512.bf049efe995b28f527fd2b41ae0474ce29186f7edcb3bf545087bd61fbbebb2bf75362d1307fda09c2d288e1e499787ac12d4fcb617a974718a6051f2eee741c",
  "clean-package": {
    "remove": [
      "clean-package",
      "devDependencies",
      "packageManager",
      "scripts"
    ]
  }
}
